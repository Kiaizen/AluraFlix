{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["db.json"]
      }
    }
  ],
    "routes": [
      { "handle": "filesystem" },
      {
        "src": "/api/.*",
        "dest": "/api/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/dist/index.html"
      }
    ]  
}